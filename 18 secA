#include <stdio.h>
int main() {
    int a[10], n, val, i, j;
    printf("Enter size: ");
    scanf("%d",&n);
    for(i=0;i<n;i++) scanf("%d",&a[i]);
    printf("Enter value to delete: ");
    scanf("%d",&val);
    for(i=0;i<n;i++) if(a[i]==val) {
        for(j=i;j<n-1;j++) a[j]=a[j+1];
        n--; break;
    }
    for(i=0;i<n;i++) printf("%d ",a[i]);
    return 0;
}

Output: Enter size: 6
5 10 15 20 25 30
Enter value to delete: 20
5 10 15 25 30
