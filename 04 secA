#include <stdio.h>
int main() {
    int amount, notes[]={500,200,100,50,20,10,5,2,1}, i, count;
    printf("Enter amount: ");
    scanf("%d",&amount);
    for(i=0;i<9;i++) {
        count=amount/notes[i];
        if(count>0) {
            printf("%d x %d\n",count,notes[i]);
            amount%=notes[i];
        }
    }
    return 0;
}

Output: Enter amount : 786
1 x 500
1 x 200
1 x 50
1 x 20
1 x 10
1 x 5
1 x 1
